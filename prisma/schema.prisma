generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Mark {
  id          Int         @id @default(autoincrement())
  name        String      @unique @db.VarChar(15)
  description String      @db.Text
  MarkModel   MarkModel[]
}

model Model {
  id          Int         @id @default(autoincrement())
  name        String      @unique @db.VarChar(15)
  description String      @db.Text
  MarkModel   MarkModel[]
}

model MarkModel {
  id      Int   @id @default(autoincrement())
  marks   Mark  @relation(fields: [markId], references: [id])
  markId  Int
  models  Model @relation(fields: [modelId], references: [id])
  modelId Int
  Car     Car[]

  @@unique([markId, modelId])
}

model Car {
  id Int @id @default(autoincrement())

  MarkModel   MarkModel? @relation(fields: [markModelId], references: [id])
  markModelId Int?
}
