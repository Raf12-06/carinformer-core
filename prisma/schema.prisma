generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Mark {
  id    Int     @id @default(autoincrement())
  name  String  @unique @db.VarChar(15)
  Model Model[]
}

model Model {
  id           Int            @id @default(autoincrement())
  marks        Mark           @relation(fields: [markId], references: [id])
  markId       Int
  name         String         @unique @db.VarChar(15)
  Modification Modification[]
  ModleBody    ModelBody[]
}

model Modification {
  id      Int    @id @default(autoincrement())
  models  Model  @relation(fields: [modelId], references: [id])
  modelId Int
  name    String @unique @db.VarChar(15)
}

model Body {
  id        Int         @id @default(autoincrement())
  name      String      @unique @db.VarChar(20)
  ModelBody ModelBody[]
}

model ModelBody {
  id      Int   @id @default(autoincrement())
  models  Model @relation(fields: [modelId], references: [id])
  modelId Int
  bodys   Body  @relation(fields: [bodyId], references: [id])
  bodyId  Int
}

model Engine {
  id            Int     @id @default(autoincrement())
  name          String  @unique @db.VarChar(15)
  volume        Int     @db.UnsignedInt
  horsepower    Int     @db.UnsignedInt
  mediumExpense Decimal @db.Decimal(10, 1)
}
