generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Mark {
  id          Int         @id @default(autoincrement())
  name        String      @unique @db.VarChar(15)
  description String      @db.Text
  MarkModel   MarkModel[]
}

model Model {
  id          Int         @id @default(autoincrement())
  name        String      @unique @db.VarChar(15)
  description String      @db.Text
  MarkModel   MarkModel[]
}

model MarkModel {
  id      Int   @id @default(autoincrement())
  marks   Mark  @relation(fields: [markId], references: [id])
  markId  Int
  models  Model @relation(fields: [modelId], references: [id])
  modelId Int
  Car     Car[]

  @@unique([markId, modelId])
}

model Car {
  id Int @id @default(autoincrement())

  MarkModel   MarkModel? @relation(fields: [markModelId], references: [id])
  markModelId Int?

  Engine   Engine? @relation(fields: [engineId], references: [id])
  engineId Int?

  @@unique([markModelId, engineId])
}

model Engine {
  id             Int     @id @default(autoincrement())
  name           String  @unique @db.VarChar(15)
  volume         Int     @db.UnsignedInt
  horsepower     Int     @db.UnsignedInt
  medium_expense Decimal @db.Decimal(10, 1)
  Car            Car[]
}
